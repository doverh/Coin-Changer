  <span style=""><%=results[:penny]%> </span>
</div>
</H2>




</form>
</center>
<!-- Function to verify is your inserting a number -->
<script>
	function validateAmount(){

		var val = document.getElementById('amount').value
		console.log(val);
		if  (isNaN(val))
			alert("Insert an amount with numbers!");
			
	}

</script>


</body>
</html>




